<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.jonathandorvilier.dondesang.fragment.DemandeFragment">

    <TextView
        android:id="@+id/tvRName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="67dp"
        android:text="RName" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvRName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />


    <TextView
        android:id="@+id/tvREmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerRBloodGroup"
        android:layout_alignLeft="@+id/tvRTelephone"
        android:layout_alignStart="@+id/tvRTelephone"
        android:text="Email" />

    <EditText
        android:id="@+id/etREmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etName"
        android:layout_alignRight="@+id/etName"
        android:layout_below="@+id/etName"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email" />


    <TextView
        android:id="@+id/tvRTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerRBloodGroup"
        android:layout_alignLeft="@+id/tvRBloodGroup"
        android:layout_alignStart="@+id/tvRBloodGroup"
        android:text="Telephone" />

    <EditText
        android:id="@+id/etRTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etREmail"
        android:layout_alignStart="@+id/etREmail"
        android:layout_below="@+id/etREmail"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telephone" />

    <TextView
        android:id="@+id/tvRBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etRTelephone"
        android:layout_alignLeft="@+id/tvRName"
        android:layout_alignStart="@+id/tvRName"
        android:text="BloodGroup" />


    <Spinner
        android:id="@+id/spinnerRBloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etRTelephone"
        android:layout_alignLeft="@+id/etRTelephone"
        android:layout_alignRight="@+id/etRTelephone"
        android:layout_alignStart="@+id/etRTelephone"
        android:layout_below="@+id/etRTelephone"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/btRCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvRName"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvRName"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/btReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinnerRBloodGroup"
        android:layout_alignRight="@+id/spinnerRBloodGroup"
        android:layout_alignTop="@+id/btRCancel"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="Reserve" />


</RelativeLayout>
